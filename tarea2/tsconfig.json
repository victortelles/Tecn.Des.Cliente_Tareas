{
    "include": ["src/**/*.ts"],     //Incluye dentro de una carpeta
    "exclude": ["node_modules"],    //Excluir carpetas
    "compilerOptions": {      //Compilador JS
        "outDir":"dist/scripts",    //Carpeta destino
        "noImplicitAny": true,
        "target":"ES6",              //Version de JavaScript
        "module": "ESNext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "strict": true
    }
}